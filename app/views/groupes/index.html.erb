<% unless notice.nil? %>
    <p id="notice"><%= notice %></p>
<% end %>

<div class="row">
  <div class="col-lg-12 text-center">
    <h1>Référendums ouverts au vote</h1>
    <div class="pull-right">
      <%= form_tag(voter_path, method: 'get', id: 'search-form') do %>
          <p>
            <%= text_field_tag :search, params[:search], placeholder: 'Recherche...' %>
            <%= submit_tag 'Rechercher', class: 'btn btn-default' %>
          </p>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12 text-center">
    <% if logged_in? %>
        <%= link_to 'Proposer un nouveau référendum', proposer_path %>
    <% else %>
        <%= link_to 'Connectez vous pour proposer un référendum ', log_in_path %>
    <% end %>
  </div>
</div>


<!-- Liste des référendums -->

<div class="row">

  <div class="col-lg-6">
    <%= render partial: "groupes/referendum_en_cours", :locals =>
        { :groupes => @groupes_institutionnels,
          :titre_liste => @titre_liste1 } %>
  </div>

  <div class="col-lg-6">
    <%= render partial: "groupes/referendum_en_cours", :locals =>
        { :groupes => @groupes_citoyens,
          :titre_liste => @titre_liste2 } %>
  </div>

</div>
