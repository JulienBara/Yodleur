<div class="row">
  <div class="col-lg-12 text-center">
    <h1>Connexion</h1>
  </div>
</div>

<%= form_for :session, url: sessions_path do %>

  <% unless flash[:erreur].nil? %>
    <div class="explication_erreur">
      <%= flash[:erreur] %>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag :mail, 'Courriel' %>
    <%= text_field_tag :mail, params[:mail], class: 'form-control', placeholder: 'exemple@yodleur.fr' %>
  </div>

  <div class="form-group">
    <%= label_tag :mot_de_passe %>
    <%= password_field_tag :mot_de_passe, '', class: 'form-control', placeholder: 'Mot de passe' %>
  </div>

  <%= submit_tag 'Connexion', class: 'btn btn-primary btn-lg' %>

  <%= link_to 'Inscription', sign_up_path, class: 'btn btn-default btn-lg' %>

<% end %>
